<Window x:Class="JctWeatherWidget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Jct Weather" Height="100" Width="280"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        MouseDown="Window_MouseDown"
        Loaded="Window_Loaded">

    <Border Background="White" Opacity="0.85" BorderBrush="Black" BorderThickness="1" Padding="10">
        <StackPanel>
            <TextBlock x:Name="LocationBlock" FontFamily="Courier New" FontSize="14" Foreground="Black" />
            <TextBlock x:Name="TempBlock" FontFamily="Courier New" FontSize="14" Foreground="Black" />
            <TextBlock x:Name="DetailsBlock" FontFamily="Courier New" FontSize="12" Foreground="Black" />
        </StackPanel>
    </Border>
</Window>
